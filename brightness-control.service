[Unit]
Description=Brightness Control Widget for Raspberry Pi Touchscreen
After=graphical.target

[Service]
Type=simple
Environment=DISPLAY=:0
Environment=XAUTHORITY=%h/.Xauthority
Environment=BRIGHTNESS_SERVICE_MODE=1
ExecStart=/usr/bin/python3 %h/brightness-control/brightness_control.py --service
Restart=on-failure
RestartSec=5

[Install]
WantedBy=default.target

